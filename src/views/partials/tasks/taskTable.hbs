            <a href="/edit/{{_id}}" class="btn btn-info">Actualizar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="text-center">
    <h1>No hay Tareas</h1>
    <img src="" alt="" />
  </div>
{{/if}}