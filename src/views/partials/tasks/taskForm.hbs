<div class="card card-body p-4 rounded-0 bg-dark text-white">

  <h3>Agrega una tarea</h3>
  <form action="/tasks/add" method="post">
    <div>
      <label for="title">Escribe un titulo</label>
      <input
        type="text"
        name="title"
        placeholder="Titulo"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>
      <label for="description">Descripción</label>
      <textarea
        name="description"
        placeholder="Descripción"
        id="description"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>

    <button class="btn btn-primary mt-2">Agregar</button>

  </form>
</div>